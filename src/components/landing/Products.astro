---
import { Image } from 'astro:assets';
import pc from '../../images/pc.avif';
import phone from '../../images/phone.avif';
import console from '../../images/console.avif';
import other from '../../images/other.avif';
---

<main>
  <div class="relative mx-auto px-8 max-w-7xl py-12 md:px-12">
    <div class="grid grid-cols-1 gap-6 lg:gap-y-32 md:grid-cols-2">
      <!-- PC & Laptop Services -->
      <a href="https://wa.me/601154229874?text=Hi%2C%20can%20I%20get%20more%20info%20on%20PC%20%26%20Laptop%20Services%3F" target="_blank" rel="noopener noreferrer" class="block">
        <figure class="relative">
          <Image
            class="w-full rounded-3xl shadow-2xl"
            src={pc}
            alt="PC & Laptop Services"
            width={1310}
            height={873}
            format="webp"
            loading="eager"
            widths={[256, 580, 920, 1160, 1310]}
            sizes={`(max-width: 580px) 256px, (max-width: 920px) 580px, (max-width: 1160px) 920px, (max-width: 1310px) 1160px, 1310px`}
          />
          <div class="mt-4 flex justify-between px-6">
            <div>
              <h1 class="text-sm text-negroni-500">HDD/SSD/RAM upgrade, format/install/activate Windows etc.</h1>
              <p class="mt-1 text-lg font-medium leading-6 text-white">PC & Laptop Services</p>
            </div>
            <p class="text-base text-tomato-500">RM5 - RM800</p>
          </div>
        </figure>
      </a>

      <!-- Phone Services -->
      <a href="https://wa.me/601154229874?text=Hi%2C%20can%20I%20get%20more%20info%20on%20Phone%20Services%3F" target="_blank" rel="noopener noreferrer" class="block">
        <figure class="relative">
          <Image
            class="w-full rounded-3xl shadow-2xl"
            src={phone}
            alt="Phone Services"
            width={1310}
            height={873}
            format="webp"
            loading="eager"
            widths={[256, 580, 920, 1160, 1310]}
            sizes={`(max-width: 580px) 256px, (max-width: 920px) 580px, (max-width: 1160px) 920px, (max-width: 1310px) 1160px, 1310px`}
          />
          <div class="mt-4 flex justify-between px-6">
            <div>
              <h1 class="text-sm text-negroni-500">
                battery/screen/camera/speaker replacement etc.
              </h1>
              <p class="mt-1 text-lg font-medium leading-6 text-white">Phone Services</p>
            </div>
            <p class="text-base text-tomato-500">RM5 - RM800</p>
          </div>
        </figure>
      </a>

      <!-- Game Console Services -->
      <a href="https://wa.me/601154229874?text=Hi%2C%20can%20I%20get%20more%20info%20on%20Game%20Console%20Services%3F" target="_blank" rel="noopener noreferrer" class="block">
        <figure class="relative">
          <Image
            class="w-full rounded-3xl shadow-2xl"
            src={console}
            alt="Game Console Services"
            width={1310}
            height={873}
            format="webp"
            loading="lazy"
            widths={[256, 580, 920, 1160, 1310]}
            sizes={`(max-width: 580px) 256px, (max-width: 920px) 580px, (max-width: 1160px) 920px, (max-width: 1310px) 1160px, 1310px`}
          />
          <div class="mt-4 flex justify-between px-6">
            <div>
              <h1 class="text-sm text-negroni-500">
                PS5 SSD upgrade, Nintendo Switch jailbreak etc.
              </h1>
              <p class="mt-1 text-lg font-medium leading-6 text-white">Game Console Services</p>
            </div>
            <p class="text-base text-tomato-500">RM5 - RM600</p>
          </div>
        </figure>
      </a>

      <!-- Other Services -->
      <a href="https://wa.me/601154229874?text=Hi%2C%20can%20I%20get%20more%20info%20on%20Other%20Services%3F" target="_blank" rel="noopener noreferrer" class="block">
        <figure class="relative">
          <Image
            class="w-full rounded-3xl shadow-2xl"
            src={other}
            alt="Other Services"
            width={1310}
            height={873}
            format="webp"
            loading="lazy"
            widths={[256, 580, 920, 1160, 1310]}
            sizes={`(max-width: 580px) 256px, (max-width: 920px) 580px, (max-width: 1160px) 920px, (max-width: 1310px) 1160px, 1310px`}
          />
          <div class="mt-4 flex justify-between px-6">
            <div>
              <h1 class="text-sm text-negroni-500">
                anime/games/movies download etc.
              </h1>
              <p class="mt-1 text-lg font-medium leading-6 text-white">Other Services</p>
            </div>
            <p class="text-base text-tomato-500">RM5 - RM250</p>
          </div>
        </figure>
      </a>
    </div>
  </div>
</main>
